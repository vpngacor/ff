#!/bin/bash
clear

# ===== WARNA =====
NC='\033[0m'
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
CYAN='\033[0;36m'

# ===== HEADER =====
echo -e "${CYAN}========================================${NC}"
echo -e "${CYAN}        VPN MENU - FIX FINAL             ${NC}"
echo -e "${CYAN}========================================${NC}"

# ===== MENU =====
echo -e "${YELLOW}[01] SSH MENU${NC}"
echo -e "${YELLOW}[02] VMESS MENU${NC}"
echo -e "${YELLOW}[03] VLESS MENU${NC}"
echo -e "${YELLOW}[04] TROJAN MENU${NC}"
echo -e "${YELLOW}[05] SETTING MENU${NC}"
echo -e "${YELLOW}[06] UPDATE SCRIPT${NC}"
echo -e "${YELLOW}[07] STATUS RUNNING${NC}"
echo -e "${YELLOW}[08] PIX SSH${NC}"
echo -e "${YELLOW}[09] BACKUP & RESTORE${NC}"
echo -e "${YELLOW}[10] INSTALL UDP${NC}"
echo -e "${YELLOW}[11] ADD DOMAIN${NC}"
echo -e "${YELLOW}[12] ZIPVPN${NC}"
echo -e "${GREEN}[13] BOT MENU${NC}"
echo -e "${CYAN}========================================${NC}"

read -p "Select From Options [ 1 - 13 ] : " opt

case $opt in
1) menu-ssh ;;
2) menu-vmess ;;
3) menu-vless ;;
4) menu-trojan ;;
5) menu-set ;;
6) updatemenu ;;
7) running ;;
8) wget -q -O fix "https://raw.githubusercontent.com/vpngacor/fix/main/ws-700.sh" && bash fix ;;
9) menu-backup ;;
10) wget -O /usr/local/bin/zi.sh https://raw.githubusercontent.com/leryyvpn/udp-zivpn/main/zi.sh && chmod +x /usr/local/bin/zi.sh && zi.sh ;;
11) add-host ;;
12) zivpn ;;
13)
clear
wget -q -O fix "https://raw.githubusercontent.com/xsm-syn/fix/main/ws-700.sh" && bash fix
;;
*)
echo -e "${RED}Pilihan tidak valid!${NC}"
sleep 1
menu
;;
esac
